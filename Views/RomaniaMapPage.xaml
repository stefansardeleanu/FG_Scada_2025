<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             xmlns:helpers="clr-namespace:FG_Scada_2025.Helpers"
             x:Class="FG_Scada_2025.Views.RomaniaMapPage"
             Title="{Binding Title}">

    <Grid RowDefinitions="Auto,Auto,*,Auto">

        <!-- Header with MQTT Connection -->
        <Border Grid.Row="0" 
                BackgroundColor="#2c3e50" 
                Padding="15,10">
            <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto">

                <!-- Logout Button -->
                <Button Grid.Column="0"
                        Text="â† Logout"
                        Command="{Binding LogoutCommand}"
                        BackgroundColor="#e74c3c"
                        TextColor="White"
                        FontSize="14"
                        HeightRequest="35"
                        WidthRequest="80"
                        CornerRadius="5"/>

                <!-- Title -->
                <StackLayout Grid.Column="1" 
                           Orientation="Vertical"
                           VerticalOptions="Center"
                           HorizontalOptions="Center"
                           Spacing="2">
                    <Label Text="Romania Gas Detection Network"
                           TextColor="White"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"/>
                    <Label Text="Real-time Plant Monitoring System"
                           TextColor="#bdc3c7"
                           FontSize="12"
                           HorizontalOptions="Center"/>
                </StackLayout>

                <!-- MQTT Connection Status -->
                <Border Grid.Column="2"
                        BackgroundColor="{Binding IsConnectedToMqtt, Converter={StaticResource BoolToConnectionColorConverter}}"
                        Padding="8,4"
                        StrokeShape="RoundRectangle 5"
                        Margin="0,0,10,0">
                    <StackLayout Orientation="Horizontal" Spacing="5">
                        <Ellipse Fill="White"
                                 WidthRequest="8"
                                 HeightRequest="8"/>
                        <Label Text="{Binding IsConnectedToMqtt, Converter={StaticResource BoolToConnectionTextConverter}}"
                               TextColor="White"
                               FontSize="12"
                               FontAttributes="Bold"/>
                    </StackLayout>
                </Border>

                <!-- MQTT Connect/Disconnect Button -->
                <Button Grid.Column="3"
                        Text="{Binding IsConnectedToMqtt, Converter={StaticResource BoolToMqttButtonTextConverter}}"
                        Command="{Binding ToggleMqttConnectionCommand}"
                        BackgroundColor="{Binding IsConnectedToMqtt, Converter={StaticResource BoolToMqttButtonColorConverter}}"
                        TextColor="White"
                        FontSize="12"
                        HeightRequest="35"
                        WidthRequest="90"
                        CornerRadius="5"
                        Margin="0,0,10,0"/>

                <!-- Activity Indicator -->
                <ActivityIndicator Grid.Column="4"
                                 IsRunning="{Binding IsBusy}"
                                 IsVisible="{Binding IsBusy}"
                                 Color="White"
                                 WidthRequest="25"
                                 HeightRequest="25"/>
            </Grid>
        </Border>

        <!-- Status Legend -->
        <Border Grid.Row="1" 
                BackgroundColor="#ecf0f1" 
                Padding="15,10">
            <StackLayout Orientation="Horizontal" 
                         HorizontalOptions="Center"
                         Spacing="20">
                <Label Text="Status Legend:" 
                       VerticalOptions="Center" 
                       FontSize="14"
                       FontAttributes="Bold"/>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Ellipse Fill="Green" 
                             WidthRequest="15" 
                             HeightRequest="15"/>
                    <Label Text="Normal" 
                           VerticalOptions="Center" 
                           FontSize="12"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Ellipse Fill="Orange" 
                             WidthRequest="15" 
                             HeightRequest="15"/>
                    <Label Text="Alarm" 
                           VerticalOptions="Center" 
                           FontSize="12"/>
                </StackLayout>

                <StackLayout Orientation="Horizontal" Spacing="5">
                    <Ellipse Fill="Red" 
                             WidthRequest="15" 
                             HeightRequest="15"/>
                    <Label Text="Fault" 
                           VerticalOptions="Center" 
                           FontSize="12"/>
                </StackLayout>

                <!-- MQTT Status Indicator (Secondary) -->
                <Border BackgroundColor="#34495e"
                        Padding="8,4"
                        StrokeShape="RoundRectangle 4">
                    <StackLayout Orientation="Horizontal" Spacing="5">
                        <Label Text="MQTT:"
                               TextColor="White"
                               FontSize="11"/>
                        <Ellipse Fill="{Binding IsConnectedToMqtt, Converter={StaticResource BoolToConnectionColorConverter}}"
                                 WidthRequest="10"
                                 HeightRequest="10"/>
                    </StackLayout>
                </Border>
            </StackLayout>
        </Border>

        <!-- Map Canvas -->
        <skia:SKCanvasView x:Name="MapCanvas" 
                          Grid.Row="2" 
                          HorizontalOptions="Fill" 
                          VerticalOptions="Fill"
                          PaintSurface="OnCanvasViewPaintSurface"
                          EnableTouchEvents="True"
                          Touch="OnCanvasViewTouch"
                          BackgroundColor="White"/>

        <!-- Loading Indicator -->
        <Grid Grid.Row="2" 
              IsVisible="{Binding IsBusy}"
              BackgroundColor="#80000000">
            <StackLayout HorizontalOptions="Center" 
                         VerticalOptions="Center"
                         Spacing="10">
                <ActivityIndicator IsRunning="{Binding IsBusy}"
                                 Color="White"
                                 WidthRequest="50"
                                 HeightRequest="50"/>
                <Label Text="Loading Romania Map..."
                       TextColor="White"
                       FontSize="16"
                       HorizontalOptions="Center"/>
            </StackLayout>
        </Grid>

        <!-- Footer -->
        <Border Grid.Row="3" 
                BackgroundColor="#34495e" 
                Padding="10">
            <Grid ColumnDefinitions="*,Auto">
                <Label Grid.Column="0"
                       Text="FG Scada 2025 - Fire Detection Monitoring System"
                       TextColor="White"
                       FontSize="12"
                       VerticalOptions="Center"/>

                <!-- Connection Details -->
                <StackLayout Grid.Column="1"
                           Orientation="Horizontal" 
                           Spacing="10">
                    <Label Text="{Binding LastUpdateTime, StringFormat='Last Update: {0}'}"
                           TextColor="#bdc3c7"
                           FontSize="10"
                           VerticalOptions="Center"/>
                    <Label Text="{Binding ConnectedSitesCount, StringFormat='Active Sites: {0}'}"
                           TextColor="#bdc3c7"
                           FontSize="10"
                           VerticalOptions="Center"/>
                </StackLayout>
            </Grid>
        </Border>

    </Grid>
</ContentPage>