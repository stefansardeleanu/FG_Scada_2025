<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FG_Scada_2025.Views.LoginPage"
             Title="{Binding Title}"
             BackgroundColor="#f5f5f5">

    <ScrollView>
        <Grid RowDefinitions="*,Auto,*" 
              ColumnDefinitions="*,Auto,*"
              Padding="20">

            <!-- Main Login Container -->
            <Border Grid.Row="1" Grid.Column="1"
                    BackgroundColor="White"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 15"
                    MinimumWidthRequest="400"
                    MaximumWidthRequest="500">

                <Border.Shadow>
                    <Shadow Brush="Black" Opacity="0.1" Radius="10" Offset="0,2"/>
                </Border.Shadow>

                <StackLayout Padding="40,50" Spacing="25">

                    <!-- Header -->
                    <StackLayout Spacing="10">
                        <Label Text="FG SCADA 2025"
                               FontSize="32"
                               FontAttributes="Bold"
                               TextColor="#2c3e50"
                               HorizontalOptions="Center"/>

                        <Label Text="Fire Detection Monitoring System"
                               FontSize="16"
                               TextColor="#7f8c8d"
                               HorizontalOptions="Center"/>

                        <BoxView HeightRequest="2"
                                 BackgroundColor="#3498db"
                                 WidthRequest="100"
                                 HorizontalOptions="Center"
                                 Margin="0,10,0,0"/>
                    </StackLayout>

                    <!-- Login Form -->
                    <StackLayout Spacing="20">

                        <!-- Username Field -->
                        <StackLayout Spacing="8">
                            <Label Text="Username" 
                                   FontSize="14" 
                                   FontAttributes="Bold"
                                   TextColor="#2c3e50"/>
                            <Border BackgroundColor="#f8f9fa"
                                    StrokeThickness="1"
                                    Stroke="#dee2e6"
                                    StrokeShape="RoundRectangle 8">
                                <Entry x:Name="UsernameEntry"
                                       Text="{Binding Username}"
                                       Placeholder="Enter your username"
                                       FontSize="16"
                                       BackgroundColor="Transparent"
                                       Margin="15,12"/>
                            </Border>
                        </StackLayout>

                        <!-- Password Field -->
                        <StackLayout Spacing="8">
                            <Label Text="Password" 
                                   FontSize="14" 
                                   FontAttributes="Bold"
                                   TextColor="#2c3e50"/>
                            <Border BackgroundColor="#f8f9fa"
                                    StrokeThickness="1"
                                    Stroke="#dee2e6"
                                    StrokeShape="RoundRectangle 8">
                                <Entry x:Name="PasswordEntry"
                                       Text="{Binding Password}"
                                       Placeholder="Enter your password"
                                       IsPassword="True"
                                       FontSize="16"
                                       BackgroundColor="Transparent"
                                       Margin="15,12"/>
                            </Border>
                        </StackLayout>

                        <!-- Error Message -->
                        <Label Text="{Binding ErrorMessage}"
                               TextColor="Red"
                               FontSize="14"
                               HorizontalOptions="Center"
                               IsVisible="{Binding ErrorMessage, Converter={StaticResource StringToBoolConverter}}"/>

                        <!-- Login Button -->
                        <Button Text="LOGIN"
                                Command="{Binding LoginCommand}"
                                IsEnabled="{Binding IsLoginEnabled}"
                                BackgroundColor="#3498db"
                                TextColor="White"
                                FontSize="16"
                                FontAttributes="Bold"
                                HeightRequest="50"
                                CornerRadius="8"
                                Margin="0,10,0,0">
                            <Button.Triggers>
                                <Trigger TargetType="Button" Property="IsEnabled" Value="False">
                                    <Setter Property="BackgroundColor" Value="#bdc3c7"/>
                                </Trigger>
                            </Button.Triggers>
                        </Button>

                        <!-- Loading Indicator -->
                        <ActivityIndicator IsRunning="{Binding IsBusy}"
                                         IsVisible="{Binding IsBusy}"
                                         Color="#3498db"
                                         HorizontalOptions="Center"/>

                    </StackLayout>

                    <!-- Demo Users Info -->
                    <StackLayout Spacing="10" Margin="0,20,0,0">
                        <Label Text="Demo Users:"
                               FontSize="12"
                               FontAttributes="Bold"
                               TextColor="#7f8c8d"
                               HorizontalOptions="Center"/>

                        <Label HorizontalOptions="Center" FontSize="11" TextColor="#95a5a6">
                            <Label.FormattedText>
                                <FormattedString>
                                    <Span Text="CEO: " FontAttributes="Bold"/>
                                    <Span Text="admin / admin" FontFamily="Consolas"/>
                                    <Span Text="&#10;"/>
                                    <Span Text="Manager: " FontAttributes="Bold"/>
                                    <Span Text="manager / manager" FontFamily="Consolas"/>
                                    <Span Text="&#10;"/>
                                    <Span Text="Operator: " FontAttributes="Bold"/>
                                    <Span Text="operator / operator" FontFamily="Consolas"/>
                                </FormattedString>
                            </Label.FormattedText>
                        </Label>
                    </StackLayout>

                </StackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>